{
  "openapi": "3.0.3",
  "info": {
    "title": "Bookstore API",
    "description": "API for managing books, categories, carts, and orders in a bookstore application.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8000/api",
      "description": "Local development server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "Sanctum Token"
      }
    },
    "schemas": {
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": false
          },
          "message": {
            "type": "string",
            "example": "Error message"
          },
          "errors": {
            "type": "object",
            "nullable": true
          }
        },
        "required": ["success", "message"]
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "name": {
            "type": "string",
            "example": "Test User"
          },
          "email": {
            "type": "string",
            "example": "user@example.com"
          },
          "is_admin": {
            "type": "boolean",
            "example": false
          }
        }
      },
      "Book": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "title": {
            "type": "string",
            "example": "Test Book"
          },
          "category_id": {
            "type": "integer",
            "example": 1
          },
          "author": {
            "type": "string",
            "example": "Author"
          },
          "description": {
            "type": "string",
            "example": "Book description"
          },
          "stock": {
            "type": "integer",
            "example": 10
          },
          "price": {
            "type": "number",
            "format": "float",
            "example": 29.99
          },
          "img": {
            "type": "string",
            "example": "test.jpg"
          }
        },
        "required": [
          "title",
          "category_id",
          "author",
          "description",
          "stock",
          "price"
        ]
      },
      "Category": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "name": {
            "type": "string",
            "example": "Fiction"
          },
          "img": {
            "type": "string",
            "example": "fiction.jpg"
          }
        },
        "required": ["name"]
      },
      "Cart": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "user_id": {
            "type": "integer",
            "example": 1
          },
          "cart_details": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CartDetail"
            }
          }
        }
      },
      "CartDetail": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "cart_id": {
            "type": "integer",
            "example": 1
          },
          "book_id": {
            "type": "integer",
            "example": 1
          },
          "quantity": {
            "type": "integer",
            "example": 2
          },
          "book": {
            "$ref": "#/components/schemas/Book"
          }
        }
      },
      "Order": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "user_id": {
            "type": "integer",
            "example": 1
          },
          "total_price": {
            "type": "number",
            "format": "float",
            "example": 59.98
          },
          "shipping_address": {
            "type": "string",
            "example": "Jalan Test No. 123"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "example": "2025-05-25T14:16:00.000000Z"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time",
            "example": "2025-05-25T14:16:00.000000Z"
          },
          "order_details": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OrderDetail"
