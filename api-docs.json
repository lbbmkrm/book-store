        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "order_id": {
            "type": "integer",
            "example": 1
          },
          "book_id": {
            "type": "integer",
            "example": 1
          },
          "quantity": {
            "type": "integer",
            "example": 2
          },
          "price": {
            "type": "number",
            "format": "float",
            "example": 29.99
          },
          "book": {
            "$ref": "#/components/schemas/Book"
          }
        }
      }
